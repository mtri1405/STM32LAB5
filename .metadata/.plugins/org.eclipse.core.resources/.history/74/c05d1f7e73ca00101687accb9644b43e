 *      Author: MinhTri
 */
#include "uart_communication_fsm.h"

uint8_t command_status = IDLE;

void uart_communication_fsm(void) {
	static int last_ADC_value = 0;
	static uint8_t active_flag = 0;
	char str[100];
	int tx_len;

	// Do not process if command parser is reading
	if (status == READING) {
		return;
	}

	switch (command_status) {
	case RST:
		if (active_flag == 0) {
			last_ADC_value = HAL_ADC_GetValue(&hadc1);
			active_flag = 1;
		}
		if (isTimeExpired(1)) {
			tx_len = sprintf(str, "!ADC=%d#\r\n", last_ADC_value);
			if (tx_len > 0) {
				HAL_UART_Transmit(&huart2, (uint8_t*)str, tx_len, UART_TX_TIMEOUT);
			}
			setTimer(1, UART_POLL_INTERVAL);
		}
		break;

	case OK:
		active_flag = 0;
		command_status = IDLE;
		break;

	case IDLE:
	case INIT:
	default:
		if (isTimeExpired(1) && active_flag == 1) {
			tx_len = sprintf(str, "!ADC=%d#\r\n", last_ADC_value);
			if (tx_len > 0) {
				HAL_UART_Transmit(&huart2, (uint8_t*)str, tx_len, UART_TX_TIMEOUT);
			}
			setTimer(1, UART_POLL_INTERVAL);
		}
		break;
	}
}
